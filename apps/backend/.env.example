DJANGO_ENV=development
DJANGO_DEBUG=true
DJANGO_SECRET_KEY=change-me
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Development database (SQLite)
DEV_DB_ENGINE=sqlite
DEV_DB_PATH=/app/data/dev.sqlite3

# Shared MariaDB credentials for test/staging/production
DB_HOST=mariadb
DB_PORT=3306
DB_NAME=riskfabric
DB_USER=riskfabric
DB_PASSWORD=riskfabric

REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
AUDIT_RETENTION_DAYS=180
AUDIT_RETENTION_SCHEDULE_HOUR=2
AUDIT_RETENTION_SCHEDULE_MINUTE=30

# EAM integration plugin (development defaults to excel_bootstrap:v1)
EAM_PLUGIN_NAME=excel_bootstrap
EAM_PLUGIN_VERSION=v1
EAM_EXCEL_FILE_PATH=/Users/dogan/Documents/Projects/ownprojects/riskfabric/apps/datasource/inventory.xls

# BEAM web service credentials and runtime mode
EAM_BASE_URL=http://eam.local
EAM_CLIENT_ID=change-me
EAM_CLIENT_SECRET=change-me
BEAM_LIVE_ENABLED=false
BEAM_TIMEOUT_SECONDS=30
BEAM_ASSETS_ENDPOINT=/api/v1/assets
BEAM_RISK_UPSERT_ENDPOINT=/api/v1/risks/upsert
